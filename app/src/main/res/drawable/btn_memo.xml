<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
    <item
        android:top="5sp"
        android:bottom="5sp"
        android:left="5sp"
        android:right="5sp">
        <shape android:shape="rectangle">
            <stroke android:width="5sp"
                android:color="@android:color/transparent">
            </stroke>
            <corners
                android:radius="14dp"
                />
            <solid
                android:color="#dddddd"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
        </shape>
    </item>
</layer-list>